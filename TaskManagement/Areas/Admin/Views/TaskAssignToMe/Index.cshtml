@model IEnumerable<TaskManagement.Areas.Admin.Models.TaskManageViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="header_form" style="text-align:center;">
    <div style="background-image: linear-gradient(45deg, #360033, #0b8793);color:white; text-align:center;">
        <h1>Nhiệm vụ được giao cho bạn</h1>
    </div>
    <br />
    @*@if (User.IsInRole(TaskManagement.Commons.Role.Admin))
        {
            @Html.ActionLink("Tạo nhiệm vụ mới", "Create", null, new { @class = "btn btn-sm btn-outline-success" })

        }*@
</div>

<table class="table" id="example">
    <thead>
        <tr>

            <th>
                Tên nhiệm vụ
            </th>
            <th>
                Người tạo
            </th>
            <th>
                Tỷ trọng
            </th>
            <th>
                Độ ưu tiên
            </th>
            <th>
                Chỉ tiêu
            </th>
            <th>
                Đơn vị tính
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Ngày tạo
            </th>
            <th>Chức năng</th>
        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserFullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rate)%
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Priority)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Targets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitTargets)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a class="btn btn-xs btn-outline-info" href="@Url.Action("Edit", "TaskManages", new { id = item.Id })">Edit</a>
                </td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>

            <th>
                Tên nhiệm vụ
            </th>
            <th>
                Người tạo
            </th>
            <th>
                Tỷ trọng
            </th>
            <th>
                Độ ưu tiên
            </th>
            <th>
                Chỉ tiêu
            </th>
            <th>
                Đơn vị tính
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Ngày tạo
            </th>
            <th>Chức năng</th>
        </tr>

    </tfoot>
</table>
<div class="toast">
    <div class="toast-header">
        Toast Header
    </div>
    <div class="toast-body">
        Some text inside the toast body
    </div>
</div>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
