@model IEnumerable<TaskManagement.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}
    <div class="header_form" style="text-align:center;">
        <div style="background-image: linear-gradient(45deg, #360033, #0b8793);color:white; text-align:center;">
            <h1>Danh sách bộ phận</h1>
        </div>
        <br />
        @Html.ActionLink("Tạo bộ phận mới", "Create", null, new { @class = "btn btn-sm btn-outline-success" })
        <a href="@Url.Action("Create", "UsersOfDepartments")" class="btn btn-sm btn-outline-success view1">Thêm tài khoản vào bộ phận</a>
    </div>

<table class="table" id="example">
    <thead>
        <tr>

            <th>
                Tên Bộ Phận
            </th>
            <th>
                Trưởng Bộ Phận
            </th>
            <th>
                Tổng thành viên
            </th>
            <th>Chức năng</th>
        </tr>

    </thead>
    <tbody>

        @foreach (var item in Model)
        {

            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserMainAssignDisplay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsersOfDepartments.Count) thành viên
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary btn-xs view1" }) 
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-info btn-xs edit1" }) 
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger btn-xs delete2" }) 


                </td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>

            <th>
                Tên Bộ Phận
            </th>
            <th>
                Trưởng Bộ Phận
            </th>
            <th>
                Tổng thành viên
            </th>

            <th>Chức năng</th>
        </tr>

    </tfoot>
</table>
<div class="toast">
    <div class="toast-header">
        Toast Header
    </div>
    <div class="toast-body">
        Some text inside the toast body
    </div>
</div>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css">
<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
@section scripts{

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]],
                responsive: true,
                //dom: '<"toolbar">frtip',
                "bAutoWidth": false,
                "bInfo": false,
                "oLanguage": {
                    "sLengthMenu": "Hiển thị _MENU_ dữ liệu",
                    "sZeroRecords": "Không có dữ liệu",
                    "sSearch": "Tìm kiếm:",
                    "oPaginate": {
                        "sNext": "Trang sau",
                        "sPrevious": "Trang trước"

                    }

                }
            });
        });
    </script>

}



