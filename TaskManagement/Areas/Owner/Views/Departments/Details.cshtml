@model TaskManagement.Models.Department

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}


<form>
    <div class="modal-content-test">
        <div class="formLogo" style="text-align: center;">
            <img src="/Assets/dist/img/VLUlogo.png" style="height: 5rem;" alt="">
        </div>
        <div class="row">
            <div class="col-12">
                <p style="text-align: center;font-weight: 700;font-size: 20px;">
                    Thông tin bộ phận
                </p>
            </div>
        </div>
        <div class="card-body">
            <div class="tab-content">
                <div class="active tab-pane" id="activity">
                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- About Me Box -->
                    <div class="card card-primary">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="fa fa-dice-d6 mr-1"></i>Tên bộ phận:</strong>

                            <p class="text-muted">
                                @Html.DisplayFor(model => model.Name)
                            </p>

                            <hr>
                            <strong><i class="fa fa-user-secret mr-1"></i>Trưởng bộ phận:</strong>
                            <p class="text-muted">
                               @Html.DisplayFor(model => model.UserMainAssignDisplay)
                            </p>
                            <hr>
                            <strong><i class="fa fa-users mr-1"></i>Tổng thành viên:</strong>

                            <p class="text-muted">
                                @Html.DisplayFor(model => model.UsersOfDepartments.Count) thành viên
                            </p>

                            <hr>

                            <strong><i class="fas fa-list-ol mr-1"></i>Danh sách thành viên:</strong>
                            <ul>
                                @foreach (var item in Model.UsersOfDepartments)
                                {
                                    <li><p class="text-muted">@Html.Label(item.AspNetUser.Accounts.FirstOrDefault().FullName)</p></li>
                                }
                            </ul>
                            <hr>
                            <strong><i class="fa fa-comment-alt mr-1"></i>Mô tả:</strong>

                            <area class="text-muted">
                            @Html.DisplayFor(model => model.Introduction)
                            </area>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.tab-pane -->
                <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
        </div><!-- /.card-body -->
        <div class="row">
            <div class="col-12" class="button" style="text-align: center;">
                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-danger" })
            </div>
        </div>
    </div>
</form>
