@model TaskManagement.Models.Account

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}
@if (Session["success"]!=null && Session["success"].ToString() == "Failed")
{
    <div class="alert alert-success alert-dismissible" role="alert">

        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Delete Fauke </strong> @Session["success"]
    </div>
}

<h3>Bạn có chắc muốn xóa User này khỏi hệ thống?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ và tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>


        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>

        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            Giới tính
        </dt>

        @if (Model.Gender == true)
        {
            <dd>Nam</dd>
        }
        else
        {
            <dd>Nữ</dd>
        }
        <dt>
            thuộc bộ phận
        </dt>

        @if (Model.DepartmentDisplay == null)
        {
            <dd>Chưa có bộ phận</dd>
        }
        else
        {
            @Html.DisplayFor(User => User.DepartmentDisplay)

        }
        <dt>
            Vai trò
        </dt>
        <dd>
            @Html.DisplayFor(User => User.AspNetUser.AspNetRoles.FirstOrDefault().Name)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-warning" /> |
            @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-danger" })
        </div>
    }
</div>
<div class="toast">
    <div class="toast-header">
        Toast Header
    </div>
    <div class="toast-body">
        Some text inside the toast body
    </div>
</div>


