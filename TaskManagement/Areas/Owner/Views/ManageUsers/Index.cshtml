@model IEnumerable<TaskManagement.Models.Account>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}
<div class="header_form" style="text-align:center;">
    <div style="background-image: linear-gradient(45deg, #360033, #0b8793);color:white; text-align:center;">
        <h1>Danh sách tài khoản</h1>

    </div>
    <br />
    @Html.ActionLink("Tạo tài khoản mới", "Create", null, new { @class = "btn btn-sm btn-outline-success" })
</div>

<table class="table" id="example">
    <thead>
        <tr>
            <th>
                Họ và tên
            </th>
            <th>
                Email
            </th>

            <th>
                Vai trò
            </th>

            <th>
                Chức năng
            </th>
        </tr>

    </thead>
    <tbody>

        @foreach (var user in Model)
        {

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => user.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => user.Email)
                </td>

                <td>
                    @foreach (var role in user.AspNetUser.AspNetRoles)
                    {
                        @role.Name
                    }
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = user.Id }, new { @class = "btn btn-outline-primary btn-xs view1" }) |
                    @Html.ActionLink("Details", "Details", new { id = user.Id }, new { @class = "btn btn-outline-info btn-xs edit1" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = user.Id }, new { @class = "btn btn-outline-danger btn-xs delete2 hide-button" })
                </td>
            </tr>
        }

    </tbody>
    <tfoot>
        <tr>
            <th>
                Họ và tên
            </th>
            <th>
                Email
            </th>

            <th>
                Vai trò
            </th>

            <th>
                Chức năng
            </th>
        </tr>

    </tfoot>
</table>

@section scripts{

    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]],
                responsive: true,
                //dom: '<"toolbar">frtip',
                "bAutoWidth": false,
                "bInfo": false,
                "oLanguage": {
                    "sLengthMenu": "Hiển thị _MENU_ dữ liệu",
                    "sZeroRecords": "Dữ liệu cần tìm không tồn tại",
                    "sSearch": "Tìm kiếm:",
                    "oPaginate": {
                        "sNext": "Trang sau",
                        "sPrevious": "Trang trước"

                    }

                }
            });
        });
    </script>

}



