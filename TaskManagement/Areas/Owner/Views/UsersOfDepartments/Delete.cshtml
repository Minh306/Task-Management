@model TaskManagement.Models.UsersOfDepartment

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}


<h3>bạn có chắc chắn muốn xóa nhân viên này ra khỏi bộ phận này ?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">


        <dt>
            Email nhân viên:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetUser.Email)
        </dd>

        <dt>
            Tên bộ phận
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-outline-warning" /> |
            @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-danger" })
        </div>
    }
</div>
<div class="toast">
    <div class="toast-header">
        Toast Header
    </div>
    <div class="toast-body">
        Some text inside the toast body
    </div>
</div>


