@model TaskManagement.Models.UsersOfDepartment

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Owner/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa bộ phận cho nhân viên</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.UserId)

        <div class="form-group">
            <labe class="control-label col-md-2" , style="font-weight: bold">Tên nhân viên</labe>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.AspNetUser.Email,new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <labe class="control-label col-md-2", style="font-weight: bold">Bộ phận mới</labe>
            <div class="col-md-10">
                @Html.DropDownList("DepartmentId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DepartmentId, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-outline-success" /> |
                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-outline-danger" })
            </div>
        </div>
    </div>
}

